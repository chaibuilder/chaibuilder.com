{
  "name": "chaibuilder-nextjs",
  "version": "0.1.4",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npx chai-tailwind --watch\" \"next dev --port 3001 --turbopack\"",
    "build": "npx chai-tailwind && next build",
    "dev-no-check": "pnpm install && next dev --turbopack",
    "build-no-check": "pnpm install && pnpm run prebuild && next build --turbopack",
    "start": "next start",
    "lint": "next lint & tsc --noEmit",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "check-env": "node scripts/check-env.cjs"
  },
  "dependencies": {
    "chai-next": "0.0.2-beta",
    "next": "15.4.1",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "tailwindcss": "^3.4.13",
    "eslint": "^8",
    "eslint-config-next": "^15.4",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "fs-extra": "^11.3.0",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "tailwindcss-animate": "^1.0.7"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.0.8",
      "@types/react-dom": "19.0.3"
    }
  }
}
